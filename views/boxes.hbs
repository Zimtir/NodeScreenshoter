<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/assets/css/styles.css" />
</head>

<body>
    <div class='container'>
        {{#each boxElems}}

        <div class="card">
            <div onclick="window.open('http://localhost:3000/assets/img/{{this.path}})'" class="card-img">
                <img src="/assets/img/{{this.path}}" />
            </div>
            <div class="text">
                <div class="text-content">
                    <h1 class="title">{{this.path}}</h1>
                    <div class="body-text">
                        <p>ШxВ: {{this.width}} x {{this.height}} </p>
                        <p>X x Y: {{this.x}} {{this.y}}</p>
                    </div>
                </div>
            </div>
            <svg onclick="this.classList.toggle('expanded')" class="chevron" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 100 35" width="30">
                <path d="M5 30L50 5l45 25" fill="none" stroke="#000" stroke-width="5" /></svg>
        </div>

        {{/each}}
    </div>
</body>
<html>