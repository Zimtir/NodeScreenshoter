    "url": "https://github.com/Zimtir/NodeScreenshoter/issues"
  },
  "homepage": "https://github.com/Zimtir/NodeScreenshoter#readme",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.11",
    "@types/puppeteer": "^1.20.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-list-endpoints": "^4.0.1",
    "fs": "0.0.1-security",
