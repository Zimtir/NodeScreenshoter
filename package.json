{
  "name": "dom-screenshoter",
  "version": "2.1.0",
  "description": "Tool for take screenshot of each visible node on webpage",
  "main": "server/src/index.ts",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly ./server/src/index.ts",
    "prod": "tsc && node ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev-c": "run-p start:dev autobuild",
    "start": "sirv views",
    "start:dev": "sirv views --dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zimtir/NodeScreenshoter.git"
  },
